                    Margin="10,0,0,0" 
                    Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <ComboBox Margin="10"  Width="170"
                    materialDesign:HintAssist.Hint="(sent by the customer)"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                </ComboBox>
                <ComboBox Margin="10"  Width="170"
                    materialDesign:HintAssist.Hint="(recieved)"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                </ComboBox>
                <ComboBox Margin="10"  Width="170"
                    materialDesign:HintAssist.Hint="(sent to the customer)"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                </ComboBox>
                <ComboBox Margin="10"  Width="170"
                    materialDesign:HintAssist.Hint="(delivered packeges)"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}">
