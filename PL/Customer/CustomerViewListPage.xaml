<Page x:Class="PL.CustomerViewListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="870"
      Title="CustomerViewListPage">

    <Border Style="{StaticResource ListPageStyle}">
        <DataGrid x:Name="customersList" Style="{StaticResource DataGridListStyle}"
                  DataContext="{Binding Source=CustomerToList}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding Path=Phone}"/>
                <DataGridTextColumn Header="Delivered Parcels" Binding="{Binding Path=DeliveredParcels}"/>
                <DataGridTextColumn Header="Sent Parcels" Binding="{Binding Path=SentParcels}"/>
                <DataGridTextColumn Header="Received Parcels" Binding="{Binding Path=ReceivedParcels}"/>
                <DataGridTextColumn Header="On The Way" Binding="{Binding Path=OnTheWay}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Border>
</Page>
