<Window x:Class="PL.HomePageManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Height="600" Width="950"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid x:Name="panelHeader" 
              MouseDown="PanelHeader_MouseDown"
              VerticalAlignment="Top" Height="50" 
              Background="#2b331f">

            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Right">
                <materialDesign:PackIcon Kind="WindowMinimize"
                                         Width="20" Height="20" 
                                         Background="Transparent"
                                         BorderBrush="#bbc8ba" 
                                         VerticalAlignment="Center"
                                         Margin="3,5,5,3" 
                                         Foreground="#fddca5"/>
                <materialDesign:PackIcon Kind="WindowMaximize"
                                         Width="20" Height="20" 
                                         Background="Transparent"
                                         BorderBrush="#bbc8ba" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center" 
                                         Margin="3,5,5,3" 
                                         Foreground="#fddca5"/>
                <materialDesign:PackIcon Kind="WindowClose" 
                                         Background="Transparent"
                                         BorderBrush="#bbc8ba" 
                                         VerticalAlignment="Center" 
                                         HorizontalAlignment="Center" 
                                         Height="20" Width="20"
                                         Margin="3,5,5,3" 
                                         Foreground="#fddca5" 
                                         MouseDown="Close_MouseDown"/>

            </StackPanel>
        </Grid>
        
        <Frame x:Name="ListFrame"
               HorizontalAlignment="Right" 
               VerticalAlignment="Bottom"
               Width="890" Height="550"
               NavigationUIVisibility="Hidden"/>

        <Grid x:Name="sidePanel" 
              HorizontalAlignment="Left" Width="200" Height="550"
              VerticalAlignment="Bottom" >
            <StackPanel Background="#bbc8ba" 
                        MouseLeave="SidePanel_MouseLeave">
                <Grid Height="80" 
                      VerticalAlignment="Top" Background="#FFFAFAFA">
                    <ToggleButton Name="ToggleButton"
                                  Style="{DynamicResource MaterialDesignHamburgerToggleButton}" HorizontalAlignment="Right"
                                  Height="40" VerticalAlignment="Top" 
                                  Background="Transparent" 
                                  BorderBrush="Transparent" 
                                  Click="Button_Click" Margin="0,0,10,0"/>
                </Grid>
                <Rectangle Height="50" Fill="#FFBBC8BA"/>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                          FontFamily="Century Gothic" 
                          FontSize="20" Foreground="Black" 
                          BorderBrush="Transparent" 
                          Background="Transparent" FontWeight="Bold"
                          MouseDoubleClick="OpenLists_MouseDoubleClick">
                    <ListViewItem Height="80"
                                  Background="Transparent">
                        
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Icons/drone.png"
                                   Width="40" Height="40"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Drones" 
                                       HorizontalAlignment="Center" 
                                       Margin="20,5,0,0"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="80"
                                  Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="HomeBatteryOutline" 
                                                      Width="40" Height="40"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Stations" 
                                       HorizontalAlignment="Center" 
                                       Margin="20,5,0,0"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="80"
                                  Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Account" 
                                   Width="40" Height="40"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Customers" 
                                       HorizontalAlignment="Center" 
                                       Margin="20,5,0,0"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="80"
                                  Background="Transparent">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PackageVariant"
                                   Width="40" Height="40"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Parcels" 
                                       HorizontalAlignment="Center" 
                                       Margin="20,5,0,0"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="80"
                                  Background="Transparent" Margin="0,20,0,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="HomeRoof"  
                                                     Width="40" Height="40"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Home" 
                                       HorizontalAlignment="Center" 
                                       Margin="20,5,0,0"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>

       


